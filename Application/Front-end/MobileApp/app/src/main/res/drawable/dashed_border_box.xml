<?xml version="1.0" encoding="utf-8"?>
<!-- res/drawable/dashed_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background shape -->

    <!-- Dashed border -->
    <item>
        <shape
            android:shape="rectangle">
            <stroke
                android:color="?attr/colorPrimary"
                android:width="2dp"
                android:dashWidth="3dp"
                android:dashGap="2dp"/>

            <corners
                android:radius="10dp"
                />
            <padding
                android:bottom="2dp"
                android:left="2dp"
                android:right="2dp"
                android:top="2dp"
                />

        </shape>
    </item>

    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="?attr/colorPrimaryVariant" />
            <corners android:radius="10dp"/>
        </shape>

    </item>
</layer-list>